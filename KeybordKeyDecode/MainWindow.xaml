<Window x:Class="KeybordKeyDecode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeybordKeyDecode"
        mc:Ignorable="d"
        Title="Keybord Key converter to WPF" Height="200" Width="400">
    <Grid>
        <TextBox x:Name="SignsTextbox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="372" AutomationProperties.HelpText="Type text" VerticalContentAlignment="Center" ToolTip="Type any sign from keybord"/>
        <Button x:Name="ConvertButton" Content="Convert" HorizontalAlignment="Center" Margin="10,48,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="ResultTextbox" HorizontalAlignment="Left" Height="27" Margin="10,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="372" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
